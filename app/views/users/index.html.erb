<div class= "container users_page">
  <center><%= page_title "Users" do %>
    <%= link_to "Create User", new_user_path, class: "btn btn-default pull-right" %>
    <% end %></center>

  <hr>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= link_to ("#{user.first_name} #{user.last_name}"),
        user_path(user), class: "name_link" %></td>
        <td><%= user.email %></td>
        <td><%= link_to "Edit", edit_user_path(user),
        class:"auth-button btn btn-default" %></td>
        <td><%= link_to "Delete", user, method: :delete,
        data: { confirm: "Are you sure?"}, class: "auth-button btn btn-default" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

