<div class= "container tasks_page">
  <table class="table">
    <h1 class="text-center">Users
      <div class="pull-right">
        <%= link_to "Create User", new_user_path,
            class: "btn btn-default pull-right" %>
      </div>
    </h1>

    <hr>


    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to ("#{user.first_name} #{user.last_name}"), user_path(user) %></td>
            <td><%= user.email %></td>
            <td><%= link_to "Edit", edit_user_path(user), class:"auth-button btn btn-default" %></td>
            <td><%= button_to "Delete", user, method: :delete, class:"auth-button btn btn-default" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </table
</div>

