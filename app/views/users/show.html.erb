<% @body_class="users-show-page" %>

<div class="jumbotron show text-center col-sm-offset-3 col-sm-6">

  <%= page_title "#{@user.first_name} #{@user.last_name}" %>

  <br>

  <strong>
      <div class="form-group col-sm-offset-1">
        <%= image_tag @user.avatar, class: "img-responsive img-thumbnail",
        size: "120x80" %>
      </div>

    <div class="form-group col-sm-offset-1">
    Email: <%= mail_to @user.email %>
    </div>
  </strong>

  <div><%= link_to "Edit", edit_user_path(@user),
      class:"auth-button btn btn-default" %>
    <%= link_to "Delete", @user, method: :delete, data: { confirm: "Are you sure?"},
      class: "auth-button btn btn-default" %>
  </div>

</div>
