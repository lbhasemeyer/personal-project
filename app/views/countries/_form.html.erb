<%= form_for(@country, html: {class: "form-horizontal"}) do |f| %>
<div class="container country well col-sm-offset-3 col-sm-6">

  <center><%= page_title "#{title}" %></center>

  <% if @country.errors.present? %>
  <ul class= "list list-unstyled text-danger">
    <% @country.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <div class="form-group">
    <label class="col-sm-2 control-label"><%= f.label :region %></label>
    <div class="col-sm-8">
      <%= f.text_field :region, class: "form-control col-sm-4" %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label"><%= f.label :code %></label>
    <div class="col-sm-8">
      <%= f.text_field :code, class: "form-control col-sm-4" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-5">
      <%= f.submit class:"auth-button btn btn-default" %>
    </div>
  </div>

</div>
<% end %>

